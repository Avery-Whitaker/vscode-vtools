{
    "name": "vscode-vtools",
    "displayName": "VTools",
    "description": "A collection of small tools for Visual Studio Code.",
    "version": "1.0.1",
    "publisher": "venryx",
	"repository": "https://github.com/Venryx/vscode-vtools",
	"icon": "Images/Icons/Logo_128.png",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
		"*"
    ],
    "main": "./out/src/extension",
    "contributes": {
		"configuration": {
			"type": "object",
			"title": "VTools configuration",
			"properties": {
				"vtools.autoHideSideBar": {
					"type": "boolean",
					"default": false,
					"description": "Causes the side-bar to be hidden whenever the user clicks outside of it."
				}
			}
		}
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}